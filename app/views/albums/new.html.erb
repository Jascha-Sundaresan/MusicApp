<h2>Enter New Album</h2>

<form action="<%= albums_url %>" method="post">
<%= auth_token %>
<%= name_form_entry("album") %>
<br>
<%= dropdown("band") %>
<br>
<label>Recording</label>
  <input name="album[live_recording]"
         id="live"
         type="radio"
         value= true>
    <lable for="live">Live</lable>
  <input name="album[live_recording]"
         id="studio"
         type="radio"
         value= false>
    <label for="studio">Studio</label>
<br>
<%= submit("album") %>
</form>

